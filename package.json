{
  "name": "umi-ts-cli",
  "version": "0.0.1",
  "description": "Umi + Typescript 脚手架",
  "repository": "git@github.com:didilinkin/umi-ts-cli.git",
  "author": "yanxiaodi <929213769@qq.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env FORK_TS_CHECKER=1 PORT=8001 umi dev",
    "build": "cross-env umi build",
    "test": "cross-env umi test",
    "lint:es": "cross-env eslint --ext .js src mock tests",
    "lint:ts": "cross-env tslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "precommit": "lint-staged",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\""
  },
  "dependencies": {
    "antd": "^3.12.1",
    "cross-env": "^5.2.0",
    "dva": "^2.5.0-beta.2",
    "dva-core": "^1.4.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^1.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "react-test-renderer": "^16.7.0",
    "redux": "3.7.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.1",
    "umi": "^2.4.2",
    "umi-plugin-react": "^1.4.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts, tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
