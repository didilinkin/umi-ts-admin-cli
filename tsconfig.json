{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"],
      "services/*": ["src/services/*"],
      "assets/*": ["src/assets/*"],
      "utils/*": ["src/utils/*"],
    },
    "allowSyntheticDefaultImports": true
  }
}
